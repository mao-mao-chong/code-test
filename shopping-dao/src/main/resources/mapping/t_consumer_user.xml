<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.com.bmw.dao.ConsumerUserDao">
    <resultMap id="ConsumerUser" type="org.com.bmw.model.ConsumerUser" >
        <result column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>
    <select id="selectConsumerUserByPrimaryKey" resultMap="ConsumerUser">
        select * from t_consumer_user where 1=1
        and id=#{id}
    </select>
    <select id="selectConsumerUser" resultMap="ConsumerUser">
        select * from t_consumer_user where 1=1
        <if test="userName != null">
            and user_name=#{userName}
        </if>
        and del_flag=0

    </select>
    <insert id="insertConsumerUser" useGeneratedKeys="true" keyProperty="id">
        insert into t_consumer_user(user_name,password,create_time,update_time,del_flag)
        values (
            #{userName},
            #{password},
            SYSDATE(),
            SYSDATE(),
            0
        )
    </insert>
</mapper>